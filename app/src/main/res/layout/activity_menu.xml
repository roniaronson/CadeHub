<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Your Game"
            android:textStyle="bold"
            android:textSize="40dp"
            android:fontFamily="@font/dohyeon"
            android:layout_marginTop="50dp"
            android:textColor="#AA14F0"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:background="@drawable/tictactoe_bg">
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play TicTacToe"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#EEEEEE"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="bla bla bla"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#EEEEEE"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="8dp"
                    android:src="@drawable/tictactoe"
                    android:layout_marginLeft="52dp">
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:background="@drawable/hangman_bg">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play Hangman"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#EEEEEE"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="bla bla bla"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#EEEEEE"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="8dp"
                    android:src="@drawable/hangmangame"
                    android:layout_marginLeft="60dp">
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:background="@drawable/tictactoe_bg">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play Memory Game"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#EEEEEE"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="bla bla bla"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#EEEEEE"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="8dp"
                    android:src="@drawable/memorygame"
                    android:layout_marginLeft="10dp">
                </ImageView>
            </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>